<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="20dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="10"
                    app:iss_period="1000" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btTextDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Gợi ý riêng cho bạn"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:ignore="MissingConstraints" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivNewDrink"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/newdrink" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Món mới phải thử"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivCoffee"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/coffee" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Cà Phê"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivHiTea"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/hitea" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Trà Trái cây"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivMilkTea"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/milktea" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Trà sữa"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivGreenTea"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/matcha" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Trà xanh"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivHotDrink"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/hotdrink" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Món nóng"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivSaltineCrackers"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/banhman" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Bánh mặn"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="50dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivCake"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/banhngot" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksandbold"
                            android:text="Bánh ngọt"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNewDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Món mới phải thử"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardNewDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCoffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Cà phê"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardCoffee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHiTea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Trà trái cây"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardHiTea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMilkTea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Trà sữa"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardMilkTea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGreenTea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Trà xanh"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardGreenTea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHotDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Món nóng"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardHotDrink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSaltineCrackers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Bánh mặn"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardSaltineCrackers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginHorizontal="16dp"
                android:text="Bánh ngọt"
                android:textSize="16dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardCake"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="70dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>