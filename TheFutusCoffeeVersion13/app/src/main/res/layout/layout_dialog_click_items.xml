<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F1F1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_header_dialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/quicksandbold"
                    android:text="Chọn sản phẩm"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/closeDialogItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/round_close_24" />

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="72dp"
                android:descendantFocusability="beforeDescendants"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgItemDialog"
                            android:layout_width="match_parent"
                            android:layout_height="380dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/maycoffee" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvTitleItemDialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/quicksandbold"
                        android:text="Cà Phê Đen Nóng"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tvPriceItemDialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/quicksandmedium"
                        android:text=""
                        android:textColor="#7D7A81"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tvDescriptionItemDialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/quicksandmedium"
                        android:text="Khuấy đều trước khi sử dụng Caramel Macchiato sẽ mang đến một sự ngạc nhiên thú vị khi vị thơm béo của bọt sữa, sữa tươi, vị đắng thanh thoát của cà phê Espresso hảo hạng và vị ngọt đậm của sốt caramel được gói gọn trong một tách cà phê."
                        android:textColor="#7D7A81"
                        android:textSize="16dp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/quicksandbold"
                        android:text="Size"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/quicksandmedium"
                        android:text="Chọn 1 loại size"
                        android:textColor="#7D7A81"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="26dp"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radioLarge"
                                android:layout_width="26dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />

                            <RadioButton
                                android:id="@+id/radioMedium"
                                android:layout_width="26dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                tools:ignore="DuplicateIds" />

                            <RadioButton
                                android:id="@+id/radioSmall"
                                android:layout_width="26dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />

                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksandmedium"
                                android:gravity="center_vertical"
                                android:text="Lớn"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksandmedium"
                                android:gravity="center_vertical"
                                android:text="Vừa"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksandmedium"
                                android:gravity="center_vertical"
                                android:text="Nhỏ"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvPriceSizeLarge"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksandmedium"
                                    android:gravity="end"
                                    android:text="10000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksandmedium"
                                    android:gravity="end"
                                    android:text="đ"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvPriceSizeMedium"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksandmedium"
                                    android:gravity="end"
                                    android:text="10000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksandmedium"
                                    android:gravity="end"
                                    android:text="đ"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvPriceSizeSmall"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksandmedium"
                                    android:gravity="end"
                                    android:text="10000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksandmedium"
                                    android:gravity="end"
                                    android:text="đ"
                                    android:textSize="18dp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/quicksandbold"
                        android:text="Topping"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/quicksandmedium"
                        android:text="Chọn tối đa 2 loại"
                        android:textColor="#7D7A81"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <ListView
                        android:id="@+id/toppingList"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:dividerHeight="0.5dp"
                        android:isScrollContainer="false"
                        android:scrollbars="none" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/quicksandbold"
                        android:text="Yêu cầu khác"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/quicksandmedium"
                        android:text="Những tùy chọn khác"
                        android:textColor="#7D7A81"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/etEmailLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/background_edittext"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:fontFamily="@font/quicksandmedium"
                        android:hint="Thêm ghi chú"
                        android:inputType="textEmailAddress"
                        android:padding="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#5E5E5E"
                        android:textSize="16dp" />

                </LinearLayout>

            </ScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="#181818"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"

                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:id="@+id/removeQuantity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_remove_circle_24" />

                    <TextView
                        android:id="@+id/quantityOfItemCard"
                        android:layout_width="40dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandmedium"
                        android:text="1"
                        android:textSize="24dp"
                        android:textColor="#f1f1f1"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/addQuantity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_add_circle_24" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btAddProductToCard"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="8dp"
                        android:background="#f1f1f1" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksandmedium"
                                android:layout_marginHorizontal="20dp"
                                android:text="Chọn"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:src="@drawable/baseline_circle_24"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/tvTotalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksandmedium"
                                android:layout_marginHorizontal="16dp"
                                android:text="39000"
                                android:textSize="18dp"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints" />

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>